<p id="notice"><%= notice %></p>

<h1>Activity Records</h1>

<table>
  <thead>
    <tr>
      <th>Activity</th>
      <th>Record date</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_records.each do |activity_record| %>
      <tr>
        <td><%= activity_record.activity %></td>
        <td><%= activity_record.record_date %></td>
        <td><%= activity_record.quantity %></td>
        <td><%= link_to 'Show', activity_record %></td>
        <td><%= link_to 'Edit', edit_activity_record_path(activity_record) %></td>
        <td><%= link_to 'Destroy', activity_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

